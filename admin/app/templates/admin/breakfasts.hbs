<div class="breakfasts-main container-fluid">
  <div class="row">
    <div class="col-lg-3 col-md-3">
      {{#each breakfast in controller}}
        {{#if breakfast.name}}
          <div class="breakfast row" {{ action 'seeBreakfast' breakfast }}>
            <h4>{{ breakfast.name }}</h4>
            <p>{{ breakfast.description }}</p>
            <p>{{ format-date breakfast.servedAt 'LL' }}</p>
          </div>
        {{/if}}
      {{else}}
        <div class="breakfast row">
          <h3 class="text-center">Create the first breakfast!</h3>
        </div>
      {{/each}}
    </div>
    <div class="col-lg-9 col-md-9">
      <div class="row breakfasts-actions">
        <div class="col-lg-12">
          {{#link-to 'admin.breakfasts.new' class="btn btn-warning pull-right"}}New Breakfast{{/link-to}}
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
</div>
