<div class="breakfast-main">
  <div class="row">
    <div class="col-lg-12">
      <h3>{{ model.name }} <small>({{ model.description}})</small></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        <div class="col-lg-12">
          {{#if model.picture}}
            <img class="breakfast-pic" src="{{ model.picture }}" alt="" />
          {{else}}
            <img class="breakfast-pic" src="https://foodimentaryguy.files.wordpress.com/2014/11/healthfitnessrevolution-com.jpg" alt="" />
          {{/if}}
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <h5 class="text-right">Served on: {{ format-date model.servedAt 'LL' }}</h5>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            {{#link-to 'admin.breakfasts.show.edit' class="btn btn-info pull-left"}}Update Breakfast{{/link-to}}
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            {{#if showDeleteConfirmation}}
              <button class="btn pull-right" {{ action 'cancelDeletion' }}>No</button>
              <button class="btn btn-success pull-right confirm-deletion" {{ action 'deleteBreakfast' model }}>Yes</button>
            {{else}}
              <button class="btn btn-primary pull-right" {{ action 'askForDeletionConfirm' }}>Delete Breakfast</button>
            {{/if}}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
</div>

