<div class="col-lg-8 comments">
  {{#each comment in arrangedContent}}
    {{#if comment.body}}
      <div class="row comment">
        <div class="col-lg-10">
          <blockquote>
            <p>{{ comment.body }}</p>
            <footer>{{ comment.author.name }}</footer>
          </blockquote>
        </div>
        <div class="col-lg-2">
          <img class="img-circle pull-right" src="{{ comment.author.gravatarUrl }}" />
        </div>
      </div>
    {{/if}}
  {{else}}
    <div class="row">
      <div class="col-lg-12">
        <h3 class="text-center">No feedback has been given. Be the first!</h3>
      </div>
    </div>
  {{/each}}
</div>
