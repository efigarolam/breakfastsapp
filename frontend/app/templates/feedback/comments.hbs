<div class="col-lg-8 comments">
  {{#each comment in arrangedContent}}
    {{breakfast-comment comment=comment currentUser=session.currentUser}}
  {{else}}
    <div class="row">
      <div class="col-lg-12">
        <h3 class="text-center">No feedback has been given. Be the first!</h3>
      </div>
    </div>
  {{/each}}
</div>
