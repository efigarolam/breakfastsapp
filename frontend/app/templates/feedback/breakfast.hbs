<div class="feedback-breakfast-main">
  <div class="row">
    <div class="col-lg-12">
      <h3>{{ content.name }} <small>({{ content.description}})</small></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        <div class="col-lg-12">
          <img class="breakfast-pic" src="{{ content.picture }}" alt="" />
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <h5 class="text-right">Served on: {{ format-date content.servedAt 'LL' }}</h5>
        </div>
      </div>

      <div class="row">
         <div class="col-lg-12">
           <div class="form-group">
             <label for="new-comment">Let us know your thoughts.</label>
             {{ textarea value=newComment.body name="new-comment" class="form-control" rows="10" placeholder="What do you think about the meal? (ingredients, size, flavor)" }}
           </div>
           <div class="form-group">
             <input type="button" class="btn btn-success pull-right" value="Comment!" {{ action 'createComment' newComment }} />
           </div>
         </div>
      </div>
    </div>

    <div class="col-lg-8">
      {{#each comment in content.comments}}
        {{#if comment.body}}
          <div class="row comment">
            <div class="col-lg-2">
              <img src="{{ comment.author.gravatarUrl }}" />
            </div>
            <div class="col-lg-10">
              <blockquote class="blockquote-reverse">
                <p>{{ comment.body }}</p>
                <footer>{{ comment.author.name }}</footer>
              </blockquote>
            </div>
          </div>
        {{/if}}
      {{else}}
        <div class="row">
          <div class="col-lg-12">
            <h3 class="text-center">No feedback has been given. Be the first!</h3>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
